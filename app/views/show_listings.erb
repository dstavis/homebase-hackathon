<div class="listings">

  <% listing = featured_listing %>
  <% if listing %>
    <div class="featured_listing">
      <div class="votecounter">
        <%= listing.vote_num %>
      </div>
      <div class="innerlisting">
        <div class="votes">
     			<div class="upvote"></div>
     			<form method="post" action="/listings/<%=listing.id%>">
     				<input type="hidden" name="upvote">
						<input type="image" src="/images/uparrow.png" alt="Submit Form">
     			</form>
          <div class="downvote"></div>
          <form method="post" action="/listings/<%=listing.id%>">
     				<input type="hidden" name="downvote">
						<input type="image" src="/images/downarrow.png" alt="Submit Form">
     			</form>
        </div>
        <div class="listingcontents">
          <h3><%= listing.title %></h3>
          <table>
            <tr><td class="subtitle">Bedrooms:</td><td><%= listing.bedrooms %></td></tr>
            <tr><td class="subtitle">Bathrooms:</td><td><%= listing.bathrooms %></td></tr>
            <tr><td class="subtitle">Location:</td><td><%= listing.location %></td></tr>
            <tr><td class="subtitle">Link:</td><td><a href="<%= listing.url %>">original link</a></td></tr>
          </table>
        </div>
      </div>
    </div>
  <% end %>

  <% all_listings %>
<% if @listings %>
  <% @listings.reverse.each do |listing| %>
    <div class="listing">
      <div class="votecounter">
        <%= listing.vote_num %>
      </div>
      <div class="innerlisting">
        <div class="votes">
     			<div class="upvote"></div>
     			<form method="post" action="/listings/<%=listing.id%>">
     				<input type="hidden" name="upvote">
						<input type="image" src="/images/uparrow.png" alt="Submit Form">
     			</form>
          <div class="downvote"></div>
          <form method="post" action="/listings/<%=listing.id%>">
     				<input type="hidden" name="downvote">
						<input type="image" src="/images/downarrow.png" alt="Submit Form">
     			</form>
        </div>
        <div class="listingcontents">
          <h3><%= listing.title %></h3>
          <table>
            <tr><td class="subtitle">Bedrooms:</td><td><%= listing.bedrooms %></td></tr>
            <tr><td class="subtitle">Bathrooms:</td><td><%= listing.bathrooms %></td></tr>
            <tr><td class="subtitle">Location:</td><td><%= listing.location %></td></tr>
            <tr><td class="subtitle">Link:</td><td><a href="<%= listing.url %>">original link</a></td></tr>
          </table>
        </div>
      </div>
    </div>
  <% end %>
<% end %>
</div>
